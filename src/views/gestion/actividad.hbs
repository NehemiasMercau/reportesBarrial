<script type="text/javascript">
    $(function () {



        $('#cboUsuario').change(function () {
            $('#inputUsuario').val($(this).val());
        });

        moment.locale('es');
        var start = moment().subtract(29, 'days');
        var end = moment();

        function cb(start, end) {
            console.log('cambio');
            $('#reportrange span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'));
            $('#txtFechas').val(start.format('DD/MM/YYYY') + ' - ' + end.format('DD/MM/YYYY'));
        }


        $('#reportrange').daterangepicker({
            startDate: start,
            endDate: end,

            ranges: {
                'Hoy': [moment(), moment()],
                'Ayer': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                '√öltimos 7 D√≠as': [moment().subtract(6, 'days'), moment()],
                '√öltimos 30 D√≠as': [moment().subtract(29, 'days'), moment()],
                'Este Mes': [moment().startOf('month'), moment().endOf('month')],
                '√öltimo Mes': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
            },
            "locale": {
                "format": "DD/MM/YYYY",
                "separator": " - ",
                "applyLabel": "Aplicar",
                "cancelLabel": "Cancelar",
                "fromLabel": "De",
                "toLabel": "At√©",
                "customRangeLabel": "Personalizado",
                "daysOfWeek": [
                    "Dom",
                    "Lun",
                    "Mar",
                    "Mier",
                    "Jue",
                    "Vie",
                    "S√°b"
                ],
                "monthNames": [
                    "Enero",
                    "Febrero",
                    "Marzo",
                    "Abril",
                    "Mayo",
                    "Junio",
                    "Julio",
                    "Agosto",
                    "Septiembre",
                    "Octubre",
                    "Noviembre",
                    "Diciembre"
                ],
                "firstDay": 0
            }
        }, cb);

        cb(start, end);

    });

    $(document).ready(function () {
        var UsuarioIdSelected = $('#cboUsuario option').filter(':selected').val();
        $('#inputUsuario').val(UsuarioIdSelected);

        $('#cboMultiple').multipleSelect({
            multiple: true,
            multipleWidth: 300,
            maxHeight: 740,
            locale: "es-ES"
        });



    })
</script>